{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "@volar/runtime-shim"],
    "lib": ["esnext", "dom"],
    "plugins": [
      {
        "name": "@volar/vscode-extension",
        "partials": true
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.vue.ts"],
  "exclude": ["node_modules"]
}
